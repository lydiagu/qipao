{
  "manifest_version": 2,

  "name": "Qipao",
  "description": "Extract structured data from a website.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Qipao"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "https://ajax.googleapis.com/"
  ],
  "web_accessible_resources": [ "jquery-2.1.3.js",
                                "icon-highlight-accept.svg",
                                "icon-highlight-reject.svg",
                                "underscore-min.js"]
}
