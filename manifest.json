{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Qipao"
  },
  "background": {
    // "scripts": [ "jquery-2.1.3.js", "background.js" ],
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "https://ajax.googleapis.com/"
  ],
  "web_accessible_resources": [ "jquery-2.1.3.js",
                                "icon-highlight-accept.svg",
                                "icon-highlight-reject.svg" ]
}
